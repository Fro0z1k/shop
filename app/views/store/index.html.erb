<% if notice %>
<p id='notice'><%= notice %></p>
<% end %>

<h1>Your Apple Watch =)</h1>

<% @products.each do | product | %>
  <div class='entry'>
    <%= image_tag( product.image_url ) %>
    <h3><%= product.title %></h3>
    <h4><%= product.description %></h4>
    <div class='price_line'>
      <span class='price'><%= number_to_currency( product.price ) %></span>
    </div>
  </div>
<% end %>